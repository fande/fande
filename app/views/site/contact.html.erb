<form  method="post" class ="niceform">
	<%= token_tag %>
	<h4>Fale conosco</h4>

	<dl>
		<dd>
			<%= text_field "contact", "name" , :onfocus => "clickclear(this, 'Nome')", :onblur => "clickrecall(this, 'Nome')", :value => "Nome"%>
		</dd>

		<dd>
			<%= text_field "contact", "email", :onfocus => "clickclear(this, 'E-mail')", :onblur => "clickrecall(this, 'E-mail')", :value => "E-mail"%>
		</dd>

		<dd>
			<%= text_field "contact", "phone", :onfocus => "clickclear(this, 'Telefone')", :onblur => "clickrecall(this, 'Telefone')", :value => "Telefone"%>
		</dd>

		<dd>
			<%= select("orcamento", "", ["Até R$2.000,00", 
										 "De R$2.001,00 a R$5.000,00",
										 "De R$5.001,00 a R$10.000,00",
										 "De R$10.001,00 a R$30.000,00",
										 "De R$30.001,00 a R$50.000,00",
										 "De R$50.001,00 a R$80.000,00",
										 "Acima de R$80.000,00"
										], 
				{:prompt => "Orçamento"}, 
				:style => "width: 220px")
			%>
		</dd>

		<dd>
			<%= text_area "contact", "message", :rows => 7, :onfocus => "clickclear(this, 'Mensagem')", 
				:onblur => "clickrecall(this, 'Mensagem')", :value => "Mensagem", :style => "width: 250px" 
			%>
		</dd>

		<dd>
			<%= submit_tag "Enviar"%>
		</dd>
	</dl>
</form>
